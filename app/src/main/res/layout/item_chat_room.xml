<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_chat_room_container"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:paddingHorizontal="20dp"
    android:paddingVertical="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="80dp">

        <ImageView
            android:id="@+id/item_chat_room_profilepic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/item_chat_room_profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/on_primary"
            android:ellipsize="end"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_chat_room_lastchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="last chat"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/item_chat_room_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_gravity="end|center_vertical" />

        </LinearLayout>
        


    </LinearLayout>


</LinearLayout>